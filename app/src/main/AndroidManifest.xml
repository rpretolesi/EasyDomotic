<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pretolesi.easydomotic" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:configChanges="keyboardHidden|orientation|screenSize"

            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:name="com.pretolesi.easydomotic.SettingsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:parentActivityName = "com.pretolesi.easydomotic.SettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/android:Theme.Holo"
            android:name=".LightSwitch.LightSwitchPropActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
