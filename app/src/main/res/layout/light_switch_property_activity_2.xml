<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/base_reference_layout"/>

        <TextView
            android:id="@+id/id_tv_protocol_data_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_rl_1"
            android:layout_alignParentStart="true"
            android:text="@string/text_tv_data_type"/>

        <Spinner
            android:id="@+id/id_spn_protocol_data_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/id_tv_protocol_data_type" />


        <TextView
            android:id="@+id/id_tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_spn_protocol_data_type"
            android:layout_alignParentStart="true"
            android:text="@string/text_tv_protocol" />

        <CheckBox
            android:id="@+id/id_cb_enable_tcp_ip_client_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tv_protocol"
            android:layout_alignParentStart="true"
             android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/id_spn_tcp_ip_client_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/id_cb_enable_tcp_ip_client_protocol"
            android:layout_marginStart="40dp"
            android:layout_below="@id/id_tv_protocol" />

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                              android:id="@+id/id_hsv_protocol_fields"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentStart="true"
                              android:layout_below="@id/id_cb_enable_tcp_ip_client_protocol"
                              android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/id_rl_protocol_fields"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_tv_protocol_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_tv_protocol_ui"
                    android:labelFor="@+id/id_et_protocol_ui"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_protocol_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_protocol_ui"
                    android:text="0"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/id_tv_protocol_addr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_protocol_ui"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_protocol_addr_value"
                    android:labelFor="@+id/id_et_protocol_addr_value"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_protocol_addr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_protocol_addr_value"
                    android:layout_toEndOf="@+id/id_tv_protocol_ui"
                    android:layout_marginStart="10dp"
                    android:text="0"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/id_tv_write_value_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_protocol_addr_value"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_write_value_off"
                    android:labelFor="@+id/id_et_write_value_off"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_write_value_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_write_value_off"
                    android:layout_toEndOf="@+id/id_tv_protocol_addr_value"
                    android:layout_marginStart="10dp"
                    android:text="0"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/id_tv_write_value_off_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_write_value_off"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_write_value_off_on"
                    android:labelFor="@+id/id_et_write_value_off_on"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_write_value_off_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_write_value_off_on"
                    android:layout_toEndOf="@+id/id_tv_write_value_off"
                    android:layout_marginStart="10dp"
                    android:text="0"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/id_tv_write_value_on_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_write_value_off_on"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_write_value_on_off"
                    android:labelFor="@+id/id_et_write_value_on_off"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_write_value_on_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_write_value_on_off"
                    android:layout_toEndOf="@+id/id_tv_write_value_off_on"
                    android:layout_marginStart="10dp"
                    android:text="0"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/id_tv_write_value_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_write_value_off_on"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_write_value_on"
                    android:labelFor="@+id/id_et_write_value_on"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_write_value_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_write_value_on"
                    android:layout_toEndOf="@+id/id_tv_write_value_off_on"
                    android:layout_marginStart="10dp"
                    android:text="0"
                    android:inputType="number"/>

            </RelativeLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</ScrollView>