<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SensorValue.SensorValuePropActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/text_tv_room_name"/>

        <Spinner
            android:id="@+id/id_spn_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/id_tv_room_name" />

        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/id_spn_room"
            android:text="@string/text_tv_name"/>

        <com.pretolesi.easydomotic.CustomControls.StringEditText
            android:id="@+id/id_et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
             android:layout_below="@id/id_tv_name"
            android:hint="@string/hint_et_name" />

        <TextView
            android:id="@+id/id_tv_orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/id_et_name"
            android:text="@string/text_tv_orientation"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/id_rg_pl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/id_tv_orientation"
                    android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_rb_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_rb_portrait" />

            <RadioButton
                android:id="@+id/id_rb_landscape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/text_rb_landscape" />

        </RadioGroup>

        <TextView
            android:id="@+id/id_tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/id_rg_pl"
            android:layout_marginTop="10dp"
            android:text="@string/text_tv_position"/>

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/id_hsv_position_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_tv_position"
                    android:layout_alignParentStart="true" >

            <LinearLayout
                android:id="@+id/id_ll_position_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_tv_position_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_tv_position_x"
                    android:labelFor="@+id/id_et_position_x" />

                <EditText
                    android:id="@+id/id_et_position_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/id_tv_position_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/text_tv_position_y"
                    android:labelFor="@+id/id_et_position_y" />

                <EditText
                    android:id="@+id/id_et_position_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/id_tv_position_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/text_tv_position_z"
                    android:labelFor="@+id/id_et_position_z"/>

                <EditText
                    android:id="@+id/id_et_position_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:inputType="number"/>

                </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/id_tv_sensor_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_hsv_position_1"
            android:layout_alignParentStart="true"
            android:text="@string/text_tv_sensor_type"
            android:labelFor="@+id/id_spn_sensor_type"/>

        <Spinner
            android:id="@+id/id_spn_sensor_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tv_sensor_type"
            android:layout_alignParentStart="true" />

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                              android:id="@+id/id_hsv_position_2"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/id_spn_sensor_type"
                              android:layout_alignParentStart="true" >

            <RelativeLayout
                android:id="@+id/id_rl_position_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_tv_sensor_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_tv_sensor_value"
                    android:labelFor="@+id/id_spn_sensor_value"/>

                <Spinner
                    android:id="@+id/id_spn_sensor_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_sensor_value" />

                <TextView
                    android:id="@+id/id_tv_sensor_enable_simulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_spn_sensor_value"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_sensor_enable_simulation"
                    android:labelFor="@+id/id_cb_sensor_enable_simulation"/>

                <CheckBox
                    android:id="@+id/id_cb_sensor_enable_simulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_spn_sensor_value"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/id_tv_sensor_enable_simulation" />

                <TextView
                    android:id="@+id/id_tv_sensor_ampl_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_sensor_enable_simulation"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_sensor_ampl_k"
                    android:labelFor="@+id/id_et_sensor_ampl_k"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_sensor_ampl_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_sensor_enable_simulation"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/id_tv_sensor_ampl_k" />

                <TextView
                    android:id="@+id/id_tv_sensor_low_pass_filter_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_sensor_ampl_k"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_sensor_low_pass_filter_k"
                    android:labelFor="@+id/id_et_sensor_ampl_k"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_sensor_low_pass_filter_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_sensor_ampl_k"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/id_tv_sensor_low_pass_filter_k" />

                <TextView
                    android:id="@+id/id_tv_sensor_sample_time_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_sensor_low_pass_filter_k"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_sensor_sample_time_k"
                    android:labelFor="@+id/id_et_sensor_sample_time_k"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_sensor_sample_time_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_sensor_low_pass_filter_k"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/id_tv_sensor_low_pass_filter_k" />

            </RelativeLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/id_tv_data_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_hsv_position_2"
            android:layout_alignParentStart="true"
            android:text="@string/text_tv_data_type"/>

        <Spinner
            android:id="@+id/id_spn_protocol_data_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/id_tv_data_type" />

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                              android:id="@+id/id_hsv_1"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/id_spn_protocol_data_type"
                              android:layout_alignParentStart="true" >
            <RelativeLayout
                android:id="@+id/id_rl_1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                 <TextView
                    android:id="@+id/id_tv_nr_of_decimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/text_tv_nr_of_decimal"
                    android:labelFor="@+id/id_et_nr_of_decimal"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_nr_of_decimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_nr_of_decimal"
                    android:layout_alignParentStart="true"
                    android:text="0"
                    android:inputType="number"/>

                 <TextView
                    android:id="@+id/id_tv_min_nr_char_to_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_nr_of_decimal"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_min_nr_char_to_show"
                    android:labelFor="@+id/id_et_min_nr_char_to_show"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_min_nr_char_to_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_min_nr_char_to_show"
                    android:layout_toEndOf="@+id/id_tv_nr_of_decimal"
                    android:layout_marginStart="10dp"
                    android:text="0"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/id_tv_um"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_min_nr_char_to_show"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_um"
                    android:labelFor="@+id/id_et_um"/>

                <com.pretolesi.easydomotic.CustomControls.StringEditText
                    android:id="@+id/id_et_um"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_um"
                    android:layout_toEndOf="@+id/id_tv_min_nr_char_to_show"
                    android:layout_marginStart="10dp"
                    android:text=""/>
            </RelativeLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/id_tv_update_millis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_hsv_1"
            android:layout_alignParentStart="true"
            android:text="@string/text_tv_update_millis"
            android:labelFor="@+id/id_et_update_millis"/>

        <com.pretolesi.easydomotic.CustomControls.NumericEditText
            android:id="@+id/id_et_update_millis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_tv_update_millis"
            android:layout_alignParentStart="true"
            android:text="0"
            android:inputType="number"/>

        <TextView
            android:id="@+id/id_tv_read_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_hsv_1"
            android:layout_toEndOf="@+id/id_tv_update_millis"
            android:layout_marginStart="10dp"
            android:text="@string/text_tv_read_only"
            android:labelFor="@+id/id_cb_read_only"/>

        <CheckBox
            android:id="@+id/id_cb_read_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tv_read_only"
            android:layout_toEndOf="@+id/id_tv_update_millis"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/id_tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_et_update_millis"
            android:layout_alignParentStart="true"
            android:text="@string/text_tv_protocol" />

        <CheckBox
            android:id="@+id/id_cb_enable_tcp_ip_client_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tv_protocol"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/id_spn_tcp_ip_client_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/id_cb_enable_tcp_ip_client_protocol"
            android:layout_marginStart="40dp"
            android:layout_below="@id/id_tv_protocol" />

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                              android:id="@+id/id_hsv_protocol_fields"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentStart="true"
                              android:layout_below="@id/id_cb_enable_tcp_ip_client_protocol"
                              android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/id_rl_protocol_fields"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_tv_protocol_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_tv_protocol_ui"
                    android:labelFor="@+id/id_et_protocol_ui"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_protocol_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_protocol_ui"
                    android:text="0"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/id_tv_protocol_addr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/id_tv_protocol_ui"
                    android:layout_marginStart="10dp"
                    android:text="@string/text_tv_protocol_addr_value"
                    android:labelFor="@+id/id_et_protocol_addr_value"/>

                <com.pretolesi.easydomotic.CustomControls.NumericEditText
                    android:id="@+id/id_et_protocol_addr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_protocol_addr_value"
                    android:layout_toEndOf="@+id/id_tv_protocol_ui"
                    android:layout_marginStart="10dp"
                    android:text="0"
                    android:inputType="number"/>

            </RelativeLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</ScrollView>